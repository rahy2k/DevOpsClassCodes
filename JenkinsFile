pipeline{
    tools{
        jdk 'myjava'
        maven 'mymaven'
    }
    agent any
    stages{
        stage('Checkout on git'){
            agent any
            steps{
                git 'https://github.com/rahy2k/DevOpsClassCodes.git'
            }
        }
        stage('Compile'){
            agent any
            steps{
                sh 'mvn compile'
            }
        }
        stage('CodeReview'){
            agent any
            steps{
                sh 'mvn pmd:pmd'
            }
        }
        stage('UnitTest'){
            agent {label 'linux_slave'}
            steps{
                git 'https://github.com/rahy2k/DevOpsClassCodes.git'
                sh 'mvn test'
            }
        }
        stage('MetricCheck'){
            agent any
            steps{
                sh 'mvn cobertura:cobertura -Dcobertura.report.format=xml'
            }
        }
        stage('Package'){
            agent{label 'linux_slave'}
            steps{
                sh 'mvn package'
            }
        }
    }
}
